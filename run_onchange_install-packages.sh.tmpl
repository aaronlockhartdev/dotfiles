#!/bin/bash

{{ if eq .osid "darwin" }}

brew update
brew install \
    zsh \
    pipx \
    pyenv \
    nvim

{{ else if eq .osid "linux-ubuntu" }}

sudo apt update
sudo apt install -y \
    zsh \
    pipx

if [ ! -d $HOME/.pyenv ]; then
    curl https://pyenv.run | bash
fi

sudo snap install --beta nvim --classic

{{ end }}

